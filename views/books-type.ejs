<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Types</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .page-container {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      width: 80%;
      max-width: 800px;
      text-align: center;
    }

    h2 {
      margin-bottom: 20px;
      color: #333;
    }

    canvas {
      margin-top: 20px;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

  <div class="page-container">
    <h2>Book Types</h2>
    <canvas id="bookTypesChart"></canvas>
  </div>

  <script>
    const ctx = document.getElementById('bookTypesChart').getContext('2d');
    const bookTypesChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: <%- JSON.stringify(books.map(book => book.b_name)) %>,
        datasets: [{
          label: 'Availability',
          data: <%- JSON.stringify(books.map(book => book.availability)) %>,
          backgroundColor: 'rgba(54, 162, 235, 0.2)',
          borderColor: 'rgba(54, 162, 235, 1)',
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  </script>

</body>
</html>